#!/bin/bash
set -euo pipefail
shopt -s inherit_errexit nullglob compat"${BASH_COMPAT=42}"

declare install_args=""
if [[ "${NEW_VERSION:-}" ]]; then
  install_args=" --version $NEW_VERSION"
fi

echo '```sh
$ cargo install'"${install_args}"'
```

```sh
$ save --help
```

```text
'"$(NO_COLOR=NO cargo run --manifest-path="$(dirname "$0")/../Cargo.toml" -- --help)"'
```' > "$(dirname "$0")/../README.md"
